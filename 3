-- Create tables
CREATE TABLE Dept(
  deptId INT PRIMARY KEY,
  deptName VARCHAR(20)
);

CREATE TABLE Emp(
  empId INT PRIMARY KEY,
  empName VARCHAR(30),
  empSal INT,
  empDeptId INT,
  FOREIGN KEY(empDeptId) REFERENCES Dept(deptId)
);

-- Add NOT NULL constraint to empName
ALTER TABLE Emp MODIFY empName VARCHAR(30) NOT NULL;

-- Insert records
INSERT INTO Dept VALUES (10,'HR'),(20,'IT'),(30,'Finance');

INSERT INTO Emp VALUES
(1,'Amit',30000,10),
(2,'Neha',40000,20),
(3,'Rohan',50000,30);

-- Add new column and make it unique
ALTER TABLE Dept ADD deptLoc VARCHAR(30) UNIQUE;
UPDATE Dept SET deptLoc='Pune' WHERE deptId=10;
UPDATE Dept SET deptLoc='Mumbai' WHERE deptId=20;
UPDATE Dept SET deptLoc='Delhi' WHERE deptId=30;
